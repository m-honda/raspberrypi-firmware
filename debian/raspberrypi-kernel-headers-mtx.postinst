#!/bin/sh
if [ -f /etc/default/raspberrypi-kernel ]; then
  . /etc/default/raspberrypi-kernel
  INITRD=${INITRD:-"No"}
  export INITRD
  RPI_INITRD=${RPI_INITRD:-"No"}
  export RPI_INITRD

fi
if [ -d "/etc/kernel/header_postinst.d" ]; then
  run-parts -v --verbose --exit-on-error --arg=4.14.52+ /etc/kernel/header_postinst.d
  run-parts -v --verbose --exit-on-error --arg=4.14.52-v7+ /etc/kernel/header_postinst.d
fi

if [ -d "/etc/kernel/header_postinst.d/4.14.52+" ]; then
  run-parts -v --verbose --exit-on-error --arg=4.14.52+ /etc/kernel/header_postinst.d/4.14.52+
fi

if [ -d "/etc/kernel/header_postinst.d/4.14.52-v7+" ]; then
  run-parts -v --verbose --exit-on-error --arg=4.14.52-v7+ /etc/kernel/header_postinst.d/4.14.52-v7+
fi
#DEBHELPER#
